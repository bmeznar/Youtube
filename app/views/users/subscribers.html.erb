<h3 style="text-align:center;">Subscriptions</h3><br>
<div class="users">
    <% if @subscrbed %>
      <div class="container">
        <ul class="list-group">
          <% @subscrbed.each do |subs| %>
            <% if(subs.subscriber_id=current_user.id) %>
                <li class="list-group-item" style="vertical-align: middle;">
                  <h4 style=" margin: 0 auto;"><% @uporabnik=@users.find_by(id: subs.subscribed_to_id) %>
                  <% if @uporabnik.profilePic.attached? %>
                    <%= image_tag @uporabnik.profilePic, class: "profilePIC" %>
                  <% else %>
                    <%= image_tag "blank_profile.png", class: "profilePIC" %>
                  <% end %>
                  <%= @uporabnik.name %>
                  <%= link_to "View profile", user_user_profile_path(@uporabnik.id), :class=>"btn btn-primary float-right" %></h4>
                </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    <% end %>
</div>
