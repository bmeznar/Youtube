<p>
  <strong>Title:</strong>
  <%= @video.title %>
</p>

<p>
  <video controls width="640" height="480" src="<%= @video.video %>"></video>
</p>

<p>
  <%= @video.user.name %><br>
  <strong>Description:</strong>
  <%= @video.description %>
</p>
<hr>
<div class="comments">
  <h3>Add new comment</h3>
  <%= render 'comments/form', Comment: @comment %>
</div>

<%= link_to 'Edit', edit_video_path(@video) %> |
<%= link_to 'Back', videos_path %>
