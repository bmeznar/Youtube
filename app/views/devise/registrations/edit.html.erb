<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5" style="margin-top:0 !important;">
          <div class="card-body">
            <h5 class="card-title text-center">Edit my profile</h5>
            <div class="form-signin">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="field form-label-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"form-control" %>
                </div>
                <br>
                <div class="field form-label-group">
                  <%= f.label :name %><br />
                  <%= f.text_field :name, autocomplete: "name", :class=>"form-control" %>
                </div>
                <br>
                <div class="field form-label-group", style="text-align:center;" >
                  <% if @user.profilePic.attached? %>
                    <%= image_tag @user.profilePic, style: "width: 200px;" %>
                  <% end %>

                  <%= f.file_field :profilePic, :class=>"form-control" %>
                </div>

                <br><hr><br>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>

                <div class="field form-label-group">
                  <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                  <%= f.password_field :password, autocomplete: "new-password", :class=>"form-control" %>
                  <% if @minimum_password_length %>
                    <em><%= @minimum_password_length %> characters minimum</em>
                  <% end %>
                </div>
                <br>
                <div class="field form-label-group">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=>"form-control" %>
                </div>
                <br>
                <div class="field form-label-group">
                  <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                  <%= f.password_field :current_password, autocomplete: "current-password", :class=>"form-control" %>
                </div>
                <br><hr><br>
                <div class="actions">
                  <%= f.submit "Update", :class=>"btn btn-lg btn-primary btn-block text-uppercase" %>
                </div>
              <% end %><hr>
              <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class=>"btn btn-md btn-outline-danger btn-block text-uppercase" %>
              <br><%= link_to "< Back", :back %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
